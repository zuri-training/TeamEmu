<div class="row mt-5">
	<div class="col-md-6 m-auto">
	  <div class="card card-body">
		<h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Forgot Password?</h1>
		<%- include ("./partials/messages") %>
		<form action="/users/requestPasswordReset" method="POST">
		  <div class="form-group">
			<label for="email">Email</label>
			<input
			  type="email"
			  id="email"
			  name="email"
			  class="form-control"
			  placeholder="Enter Email"
			/>
		  </div>
		  <button type="submit" class="btn btn-primary btn-block">Enter</button>
		</form>
		<p class="lead mt-4">
			<a href="/">Home</a>
		</p>
	  </div>
	</div>
  </div>