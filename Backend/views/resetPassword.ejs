<div class="row mt-5">
	<div class="col-md-6 m-auto">
	  <div class="card card-body">
		<h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Reset your password...</h1>
		<%- include ("./partials/messages") %>
		<form action="/users/resetPassword" method="POST">
		  <div class="form-group">
			<label for="newPassword">New Password</label>
			<input
			  type="password"
			  id="newPassword"
			  name="newPassword"
			  class="form-control"
			  placeholder="Enter new password"
			/>
			<input
			  type="hidden"
			  id="userId"
			  name="userId"
			  class="form-control"
			  value= "<%=userId%>"
			/>
			<input
			  type="hidden"
			  id="resetString"
			  name="resetString"
			  class="form-control"
			  value= "<%=resetString%>"
			/>
		  </div>
		  <button type="submit" class="btn btn-primary btn-block">Enter</button>
		</form>
		<p class="lead mt-4">
			<a href="/">Home</a>
		</p>
	  </div>
	</div>
  </div>