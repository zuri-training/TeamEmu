</nav>



<div class="content-wrapper">
   
    <%- include ("./partials/messages") %>
    
    
	<div class="container">
		<div class="alert alert-secondary text-center">
			<h1>ALL SITES</h1>    
		</div>
			
		<table class="table table-bordered">
			<thead class="bg-dark text-center">
			<tr class="text-white">          
				<th>Title</th>
				<th>Creation date</th>
				<th>Status</th>
			</tr>
			</thead>
			<tbody class="text-center">
			<% posts.forEach(function(post) { %>
				<tr>               
					<td><%= post.heroHeadline %></td>
					<td><%= post.createdAt %></td>
					<td>Active</td>
					<td class="d-flex">
	
						<form action="/deletePost/<%= post._id %>?newMethod=DELETE" method="post">
							<button style="cursor: pointer;" class="btn btn-sm btn-danger" type="submit">Delete Site</button>
						</form>
					</td>
				</tr>    
			<% }); %>
			
			</tbody>
		</table>
	</div>
</div>
</body>

</html>
